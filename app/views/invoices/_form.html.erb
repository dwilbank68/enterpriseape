<div class="row">
  <%= form_for @invoice, html:{class:'form-horizontal'} do |f| %>
      <% if @invoice.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

            <ul>
              <% @invoice.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group row">
        <%= f.label :date,              class:"control-label col-xs-2" %>
        <div class="col xs-10">
            <%= f.date_select :date,    class:"form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :company,           class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.text_field :company,      class:"form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :tax,               class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.text_field :tax,          class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :employee_id,       class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.collection_select( :employee_id,
                                   Employee.all,
                                   :id,
                                   :name,
                                   {},
                                   { :multiple => false, :class=>'form-control' } ) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Status", class:'control-label col-xs-2' %>
        <div class="col-xs-10">
          <%= f.select(:status_type, options_for_select([['PAID','PAID'],['PENDING','PENDING']]), {include_blank:true}, :class=>'form-control') %>
        </div>
      </div>

      <div class="form-group actions">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit 'Submit' ,         class: "btn btn-default" %>
        </div>
      </div>
  <% end %>
</div>