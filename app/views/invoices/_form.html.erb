            <%= f.date_select :date,    class:"form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :company,           class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.text_field :company,      class:"form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :tax,               class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.text_field :tax,          class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :salesperson,       class:"control-label col-xs-2"  %>
        <div class="col-xs-10">
          <%= f.text_field :salesperson,  class:"form-control" %>
        </div>
      </div>
      <div class="form-group actions">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit 'Submit' ,         class: "btn btn-default" %>
        </div>
      </div>
  <% end %>
  